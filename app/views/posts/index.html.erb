<h1>Posts</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>
        #
      </th>
      <th>
        Date
      </th>
      <th>
        Employee
      </th>
      <th>
        Rationale
      </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= post.id %>
        </td>
        <td>
          <%= post.date %>
        </td>
        <td>
          <%= post.user.full_name_last_first %>
        </td>
        <td>
          <%= truncate(post.rationale) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
	
