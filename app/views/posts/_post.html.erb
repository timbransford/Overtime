<tr>
  <td>
    <%= post.id %>
  </td>
  <td>
    <%= post.date %>
  </td>
  <td>
    <%= post.user.full_name_last_first %>
  </td>
  <td>
    <%= truncate(post.rationale) %>
  </td>
  <td>
    <%= link_to "Edit", edit_post_path(post), id: "edit_#{post.id}" %>
  </td>
  <td>
    <%= link_to "Delete", post_path(post), method: :delete, 
        id: "delete_post_from_index_#{post.id}", data: { confirm: "Are you sure?" } %>
  </td>
</tr>

